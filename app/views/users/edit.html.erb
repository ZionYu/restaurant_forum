<div class="container">
  <h1>Edit Profile</h1>
  <div class="row">
    <div class="col-md-12">
      <div class="form-container">
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
           <%= f.label :intro, "自我介紹" %>
           <%= f.text_area :intro, class: "form-control" %>  
          </div>
          <div class="form-group">
            <%= f.label :avatar, "大頭貼上傳" %>
            <%= image_tag @user.avatar if @user.avatar? %>
            <%= f.file_field :avatar %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update', class: "btn btn-primary" %>
            <%= link_to 'Cancel', user_path(@user), class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>
      


    </div>
    
  </div>
</div>