<div class="section clearfix">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="profile">
          <div class="col-left">
            <div class="avatar">
              <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
            </div>
          </div>
          <div class="col-right">
            <div class="personal-info">
              <h2><%= @user.name %></h2>
              <p><strong><%= @user.email %></strong></p>
              <div><%= simple_format(@user.intro) %></div>
              <%= link_to 'Edit Profile', edit_user_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      
      </div>
    </div>
  </div>
<br>
  <div class="container">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><strong><%= @commented_restaurants.count %></strong>已評論餐廳</h3>
      </div>
      <div class="panel-body">
        <% @commented_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant clearfix">
              <%= image_tag restaurant.image, width: "80px", class: "img-responsive img-rounded" %>
              <%= restaurant.name %>
            </div>
          <% end %>  
        <% end %>
      </div>     
    </div>
   
  </div>
</div>

      
    