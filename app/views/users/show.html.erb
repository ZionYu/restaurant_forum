
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="profile clearfix">
          <div class="col-left">
            <div class="avatar">
              <%= image_tag @user.avatar, width: "350px", class: "img-responsive img-rounded" %>
            </div>
          </div>
          <div class="col-right">
            <div class="personal-info">
              <h2><%= @user.name %></h2>
              <p><strong><%= @user.email %></strong></p>
              <h3>
                <small><%= @commented_restaurants.count %>已評論餐廳</small> 
                <small><%= @favorited_restaurants.count %>收藏的餐廳</small> 
                <small><%= @followings.count %>followings</small> 
                <small><%= @followers.count %>followers</small> 

              </h3>
                
              
              <div><%= simple_format(@user.intro) %></div>
              <%= link_to 'Edit Profile', edit_user_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      
      </div>
    </div>
 

    <div class="col-md-4">
      <div class="panel  panel-default ">
        <div class="panel-heading"><%= link_to 'My friend', friend_list_user_path%></div>
      </div>
      
      
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><strong><%= @followings.count %></strong> followings</h3>
        </div>
        <div class="panel-body">
          <% @followings.each do |following| %>
            <%= link_to user_path(following) do %>
              <table class="table">
                <%= image_tag following.avatar, width: "40px", class: "img-responsive img-rounded img-circle" %>
                <%= following.name %>
              </table>
            <% end %>  
          <% end %>
        </div>     
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><strong><%= @followers.count %></strong> followers</h3>
        </div>
        <div class="panel-body">
          <% @followers.each do |follower| %>
            <%= link_to user_path(follower) do %>
              <table class="table">
                <%= image_tag follower.avatar, width: "40px", class: "img-responsive img-rounded img-circle" %>
                <%= follower.name %>
              </table>
            <% end %>  
          <% end %>
        </div>     
      </div>
    </div>
    <div class="col-md-8">
      <div class="panel panel-default">   
        <div class="panel-heading">
        <h3 class="panel-title"><strong><%= @commented_restaurants.count %></strong>已評論餐廳</h3>
      </div>
        <div class="panel-body">
          <% @commented_restaurants.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
             <div class="my-restaurant clearfix">
                <%= image_tag restaurant.image, width: "80px", class: "img-responsive img-rounded" %>
                <%= restaurant.name %>
              </div>
            <% end %>  
          <% end %>
        </div>     
      </div>
    </div>
 </div>
