<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p>[<%= @restaurant.category.name %>]</p>    
    </div>
  </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image,style: 'width: 350px', class: "image-responsive center-block"  %>
    
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Tel:</strong><%= @restaurant.tel %></li>
          <li><strong>Address:</strong><%= @restaurant.address %></li>
          <li><strong>Opening Hours:</strong><%= @restaurant.opening_hours %></li>
        </ul>
      </div>
    </div>

    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    

    <div class="clearfix"></div>
 
    <div>
      <% @restaurant.comments.each do |comment| %>
        <div>
          <h4><%= comment.user.email.split("@").first %></h4>
          <p><%= simple_format comment.content %></p>
          <p class="text-muted">
            <em><%= time_ago_in_words(comment.created_at) %>ago</em></p>
        </div>
      <% end %>
    </div>
    <hr> 
<div class="container">
  <div class="row">
    <%= form_for [@restaurant, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_field :content, placeholder: "留個言吧", class: "form-control" %>
      </div>
      <div class="form-gorup">
        <%= f.submit class: "btn btn-primary" %>
        <%= f.button "cancel", type: :reset, class: "btn btn-default" %>
      </div>
    <% end %>

  </div>
</div>  


    <hr>
    <%= link_to 'Back to Index',restaurants_path %>
  
  </div>
</div>

